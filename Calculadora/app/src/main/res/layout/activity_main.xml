<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="100dp"/>
    <TextView
        android:id="@+id/tv_operacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="68dp"
        android:padding="4dp"
        android:text="123 + 456 ="
        android:textColor="@color/white"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/tv_resp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/ic_cuad"
        android:padding="4dp"
        android:text="579"
        android:textColor="@color/white"
        android:textSize="24sp" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="6"
        android:background="@color/black"
        android:layout_below="@id/tv_display">
        <Button
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin=".5dp"
            android:background="#011061"
            android:backgroundTint="#011061"
            android:contentDescription="Botón de flecha hacia abajo"
            android:drawableLeft="@drawable/ic_desplegar"
            android:paddingLeft="30dp" />

        <Button
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin=".5dp"
            android:background="#011061"
            android:backgroundTint="#011061"
            android:contentDescription="Botón"
            android:drawableLeft="@drawable/ic_barrer"
            android:paddingLeft="30dp" />
        <Button
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin=".5dp"
            android:background="#011061"
            android:backgroundTint="#011061"
            android:contentDescription="Botón"
            android:drawableLeft="@drawable/ic_delete"
            android:paddingLeft="30dp" />
        <Button
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:background="#011061"
            android:backgroundTint="#011061"
            android:text="/"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
        <Button
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:background="@color/nuevo"
            android:backgroundTint="@color/nuevo"
            android:text="("
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
        <Button
            android:layout_row="1"
            android:layout_column="1"
            android:text=")"
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="1"
            android:textSize="17sp"/>
        <Button
            android:layout_row="1"
            android:layout_column="2"
            android:text="%"
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="1"
            android:textSize="17sp"/>
        <Button
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:background="#011061"
            android:backgroundTint="#011061"
            android:text="*"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
        <Button
            android:layout_row="2"
            android:layout_column="0"
            android:text="7"
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="1"
            android:textSize="17sp"/>
        <Button
            android:layout_row="2"
            android:layout_column="1"
            android:text="8"
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="1"
            android:textSize="17sp"/>
        <Button
            android:layout_row="2"
            android:layout_column="2"
            android:text="9"
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="1"
            android:textSize="17sp"/>
        <Button
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:background="#011061"
            android:backgroundTint="#011061"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
        <Button
            android:layout_row="3"
            android:layout_column="0"
            android:text="4"
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="1"
            android:textSize="17sp"/>
        <Button
            android:layout_row="3"
            android:layout_column="1"
            android:text="5"
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="1"
            android:textSize="17sp"/>
        <Button
            android:layout_row="3"
            android:layout_column="2"
            android:text="6"
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="1"
            android:textSize="17sp"/>
        <Button
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:background="#011061"
            android:backgroundTint="#011061"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
        <Button
            android:layout_row="4"
            android:layout_column="0"
            android:text="1"
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="2"
            android:textSize="17sp"/>
        <Button
            android:layout_row="4"
            android:layout_column="1"
            android:text="2"
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="2"
            android:textSize="17sp"/>
        <Button
            android:layout_row="4"
            android:layout_column="2"
            android:text="3"
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="1"
            android:textSize="17sp"/>
        <Button
            android:layout_row="5"
            android:layout_column="0"
            android:text="0"
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="1"
            android:textSize="17sp"/>
        <Button
            android:layout_row="5"
            android:layout_column="1"
            android:text="00"
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="1"
            android:textSize="17sp"/>
        <Button
            android:layout_row="5"
            android:layout_column="2"
            android:text="."
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="1"
            android:textSize="17sp"/>
        <Button
            android:layout_row="4"
            android:layout_column="3"
            android:layout_rowSpan="2"
            android:text="="
            android:background="@color/nuevo"
            android:textColor="#FFFFFF"
            android:layout_gravity="fill"
            android:layout_margin=".5dp"
            android:layout_columnWeight="1"
            android:textSize="17sp"/>
    </GridLayout>
</RelativeLayout>
